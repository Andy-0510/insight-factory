{
  "top_n_keywords": 50,

  "weights": {
    "beta": 0.85,               // KRWordRank damping factor
    "max_iter": 20,             // KRWordRank iteration
    "mmr_diversity": 0.5        // KeyBERT MMR 다양성 (Pro 모드 전용)
  },

  "stopwords": [
    "뉴스", "기사", "사진", "기자", "연합뉴스", "속보", "영상"
  ],

  "phrase_stop": [
    "관련 기사", "더 보기", "자세히 보기"
  ],

  "alias": {
    "삼성전자": "삼성",
    "LG전자": "LG"
  },

  "domain_hints": [
    "AI", "반도체", "디스플레이", "전기차", "배터리"
  ],

  "common_debuff": [
    "기자", "사진", "영상", "뉴스"
  ],

  "use_pro": false,              // 기본값: Lite 모드
  "keybert_model": "sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2",
  "umap_neighbors": 15,
  "min_cluster_size": 12,
  "max_docs_rerank": 80
}
